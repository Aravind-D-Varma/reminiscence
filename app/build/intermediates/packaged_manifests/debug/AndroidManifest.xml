<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.project.nostalgia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <application
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:fullBackupContent="false"
        android:fullBackupOnly="false"
        android:icon="@mipmap/nostalgia_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nostalgia_logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Reminiscence" >
        <activity
            android:name="my.project.nostalgia.activities.LauncherClassActivity"
            android:theme="@style/LaunchTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="my.project.nostalgia.activities.IntroductionActivity"
            android:parentActivityName="my.project.nostalgia.activities.LauncherClassActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
        </activity>
        <activity
            android:name="my.project.nostalgia.activities.MemoryListActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:theme="@style/Theme.Reminiscence" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="my.project.nostalgia.activities.UserSettingsActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:parentActivityName="my.project.nostalgia.activities.MemoryListActivity" >
        </activity>
        <activity
            android:name="my.project.nostalgia.activities.MemoryPagerActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:parentActivityName="my.project.nostalgia.activities.MemoryListActivity" >
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="my.project.nostalgia.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files" />
        </provider>
    </application>

</manifest>