<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="LightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="LightDialogTime" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/white</item>
        <item name="android:timePickerDialogTheme">@style/myTimePickerDialogStyle</item>
    </style>
    <style name="myTimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersBackgroundColor">@color/white</item>
        <item name="android:numbersSelectorColor">@color/white</item>
        <item name="android:headerBackground">@color/white</item>
    </style>
    <style name="DarkDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/light_purple</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/light_purple</item>
    </style>

<!-- Dark application theme. __________________________________________________________________-->

    <style name="myActionbar" parent ="Widget.AppCompat.ActionBar">
        <item name ="background">@color/medium_black</item>
        <item name="titleTextStyle">@style/myActionbar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/myActionbar.SubtitleTextStyle</item>
    </style>
    <style name="myActionbar.TitleTextStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myActionbar.SubtitleTextStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/light_purple</item>
    </style>
    <style name="darkPreferenceStyle" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="darkButtonsStyle" parent = "Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/light_purple</item>
    </style>
    <style name="darkEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>
    <style name="darkSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/light_purple</item>
    </style>
    <style name="darkTextView" parent="android:Widget.TextView" >
        <item name="android:textColor">@color/light_purple</item>
    </style>
    <style name="darkCardView">
        <item name="background">@drawable/layout_border</item>
    </style>


<!-- Light application theme. __________________________________________________________________-->

    <style name="myActionbarLight" parent ="Widget.AppCompat.ActionBar">
        <item name ="background">@color/dark_purple</item>
        <item name="titleTextStyle">@style/myActionbar.TitleTextStyleLight</item>
        <item name="subtitleTextStyle">@style/myActionbar.SubtitleTextStyleLight</item>
    </style>
    <style name="myActionbar.TitleTextStyleLight" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myActionbar.SubtitleTextStyleLight" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="lightPreferenceStyle" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="lightButtonsStyle" parent = "Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_border_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="lightEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/button_border_light</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="lightSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/button_border_light</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="lightTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="lightCardView">
        <item name="background">@drawable/layout_border_light</item>
    </style>

</resources>