<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reminiscence" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/BlackDrawerIconStyle</item>
        <!-- Customize your theme here. -->
        <item name = "actionBarStyle">@style/myActionbar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>

    </style>
    <style name="BlackDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>
    <style name="myActionbar" parent ="Widget.AppCompat.ActionBar">
        <item name ="background">@color/purple_700</item>
        <item name="titleTextStyle">@style/myActionbar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/myActionbar.SubtitleTextStyle</item>
    </style>
    <style name="myActionbar.TitleTextStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myActionbar.SubtitleTextStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Light application theme. -->
    <style name="Theme.Reminiscence.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>


        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <item name = "actionBarStyle">@style/myActionbarLight</item>
    </style>

    <style name="myActionbarLight" parent ="Widget.AppCompat.ActionBar">
        <item name ="background">@color/purple_200</item>
        <item name="titleTextStyle">@style/myActionbar.TitleTextStyleLight</item>
        <item name="subtitleTextStyle">@style/myActionbar.SubtitleTextStyleLight</item>
    </style>
    <style name="myActionbar.TitleTextStyleLight" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myActionbar.SubtitleTextStyleLight" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>