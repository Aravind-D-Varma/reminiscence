<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reminiscence" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textColorPrimary">@color/light_purple</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <item name = "actionBarStyle">@style/myActionbar</item>

        <item name="buttonStyle">@style/darkButtonsStyle</item>
        <item name = "editTextStyle">@style/darkEditText</item>
        <item name="spinnerStyle">@style/darkSpinner</item>
        <item name="android:textViewStyle">@style/darkTextView</item>

    </style>
<!-- Light application theme. -->
    <style name="Theme.Reminiscence.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <item name = "actionBarStyle">@style/myActionbarLight</item>

        <item name="preferenceTheme">@style/lightPreferenceStyle</item>

        <item name="buttonStyle">@style/lightButtonsStyle</item>
        <item name = "editTextStyle">@style/lightEditText</item>
        <item name="android:textViewStyle">@style/lightTextView</item>
        <item name="navigationIconTint">@color/black</item>
    </style>


</resources>